FROM node:18-alpine

WORKDIR /app

# Install Docker CLI and other dependencies
RUN apk add --no-cache python3 make g++ docker-cli bash curl

# Copy package files
COPY backend/package*.json ./
RUN npm install

# Install global dependencies
RUN npm install -g tsx prisma

# Copy source and schema
COPY backend/ .
COPY prisma/ ./prisma/

EXPOSE 3001

CMD ["npm", "run", "dev"]